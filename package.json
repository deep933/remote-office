{
  "name": "remote-office",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@testing-library/jest-dom": "^4.2.4",
    "@testing-library/react": "^9.3.2",
    "@testing-library/user-event": "^7.1.2",
    "express": "^4.17.1",
    "npm-watch": "^0.7.0",
    "peer": "^0.5.3",
    "peerjs": "^1.3.1",
    "react": "^16.14.0",
    "react-dom": "^16.14.0",
    "react-router-dom": "^5.2.0",
    "react-scripts": "3.4.3",
    "socket.io": "^2.3.0",
    "socket.io-client": "^2.3.1",
    "uuid": "^8.3.1",
    "webrtc-adapter": "^7.7.0"
  },
  "scripts": {
    "watch": "npm-watch",
    "start": "npm run watch:css && npm run build && node server.js",
    "build": "react-scripts build",
    "br": "react-scripts build && npm run server",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "server": "node server.js",
    "watch:css": "postcss src/assets/tailwind.css -o src/assets/main.css"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "engines": {
    "node": "10.x"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "autoprefixer": "^9.8.6",
    "postcss-cli": "^8.2.0",
    "tailwindcss": "^1.9.6"
  },
  "watch": {
    "build": {
      "patterns": [
        "src"
      ],
      "extensions": "js,jsx"
    }
  }
}
